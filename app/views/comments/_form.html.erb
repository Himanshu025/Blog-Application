<%= form_with(model: [@article.comments.build], local: true) do |form| %>
<p>
  <%= form.label :commenter %><br>
  <%= form.text_field :commenter %>
</p>
<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>
    <%= form.hidden_field :article_id, :value => @article.id %>
<p>
  <%= form.submit "Comment" %>
</p>
<% end %>